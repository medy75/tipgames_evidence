<% @page_title = "User" %>
<div class="User">
  <div class="page-header">
    <h1>Uživatelé</h1>
  </div>
  <%= link_to "Přidat uživatele", {:action => 'new'}, :class => "btn btn-success" %>
  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th>Jméno</th>
        <th>Uživatelské jméno</th>
        <th>Email</th>
        <th>Město</th>
        <th>Akce</th>
      </tr>
    </thead>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.username %></td>
        <td><%= user.email %></td>
        <td><%= user.city %></td>
        <td><%= link_to "Show", {:action => 'show', :id => user.id} %>
            <%= link_to "Edit", {:action => 'edit', :id => user.id} %>
            <%= link_to "Remove", {:action => 'delete', :id => user.id}, data: { confirm: "Opravdu?" } %></td>
      </tr>
    <% end %>
  </table>
</div>