<% @page_title = "Registrace" %>
<div class="sign_form">
  <div class="page-header">
    <h1>Registrace</h1>
  </div>
  <div class="span4">
    <%= form_for(:user, :url => {:controller => 'users', :action => 'create'}) do |f| %>
      <div class="form-group">
        <label for="nameInput">Jméno:</label>
        <%= f.text_field :name, :class => "form-control", :placeholder => "Jan Novák", :type => "text" %> 
        <span class="label label-warning">Povinný údaj</span>
      </div>
      <div class="form-group">
        <label for="nameInput">Uživatelské jméno:</label>
        <%= f.text_field :username, :class => "form-control", :placeholder => "novak1", :type => "text" %> 
        <span class="label label-warning">Povinný údaj</span>
      </div>
      <div class="form-group">
        <label for="nameInput">Heslo:</label>
        <%= f.password_field :password, :class => "form-control", :placeholder => "novakJeNejlepsi", :type => "password" %> 
        <span class="label label-warning">Povinný údaj</span>
      </div>
      <div class="form-group">
        <label for="nameInput">Email:</label>
        <%= f.text_field :email, :class => "form-control", :placeholder => "novak@novak.cz", :type => "email" %>
      </div>
      <div class="form-group">
        <label for="nameInput">Telefon:</label>
        <%= f.text_field :phone, :class => "form-control", :placeholder => "123 123 123", :type => "tel" %>
      </div>
      <div class="form-group">
        <label for="nameInput">Datum narození:</label>
        <%= f.text_field :birth_date, :class => "form-control", :placeholder => "DD.MM.RRRR", :type => "date" %>
      </div>
      <div class="form-group">
        <label for="nameInput">Ulice:</label>
        <%= f.text_field :address, :class => "form-control", :placeholder => "Ulice 75", :type => "text" %> 
      </div>
      <div class="form-group">
        <label for="nameInput">Město:</label>
        <%= f.text_field :city, :class => "form-control", :placeholder => "Montreal", :type => "text" %> 
      </div>
      <%= f.submit :Registrovat, :class => "btn btn-success" %>
    <% end %>
  </div>
  <% if @user.errors.any? %>
    <ul class="Signup_Errors">
    <% for message_error in @user.errors.full_messages %>
      <li><%= flash_messages %></li>
    <% end %>
    </ul>
  <% end %>
</div>