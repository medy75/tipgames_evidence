<% @page_title = "User" %>
<div class="User">
  <%= link_to "Zpět na seznam uživatelů", {:action => 'list'}, :class => "btn btn-default" %>
  <div class="page-header">
    <h1>Detail uživatele</h1>
  </div>
  <p>
    <strong>Jméno:</strong>
    <%= @user.name %>
  </p>

  <p>
    <strong>Aktuál:</strong>
    
  </p>
 
  <p>
   <strong>Uživ. jméno:</strong>
   <%= @user.username %>
  </p>

  <p>
   <strong>Heslo:</strong>
   <%= @user.password %>
  </p>
  <p><%= link_to "Edit", {:action => 'edit', :id => @user.id} %></p>
  <p><%= link_to "Remove", {:action => 'delete', :id => @user.id}, data: { confirm: "Opravdu?" } %></p>
  <h3>Pobočky:</h3>
  <p><%= link_to "Přidat pobočku", {:action => 'new', :id => @branches} %></p>
  <p><%= @user.branches %></p>
</div>