<% @page_title = "Editace provozovny" %>
<div class="Edit_branch">
  <div class="page-header">
    <h1>Editace údajů provozovny</h1>
  </div>
  <%= form_for(:branch, :url => {:controller => 'branchs', :action => 'update'}) do |f| %>
    <div class="form-group">
      <%= f.text_field :id, :class => "form-control", :value => @branch.id, :type => "text", :style => "visibility:hidden"%>
    </div>
    <div class="form-group">
      <label for="nameInput">Název:</label>
      <%= f.text_field :name, :class => "form-control", :value => @branch.name, :type => "text" %> 
      <span class="label label-warning">Povinný údaj</span>
    </div>
    <div class="form-group">
      <label for="nameInput">Ulice:</label>
      <%= f.text_field :address, :class => "form-control", :value => @branch.address, :type => "text" %> 
      <span class="label label-warning">Povinný údaj</span>
    </div>
    <div class="form-group">
      <label for="nameInput">Město:</label>
      <%= f.text_field :city, :class => "form-control", :value => @branch.city, :type => "text" %> 
      <span class="label label-warning">Povinný údaj</span>
    </div>
    <%= f.submit :Aktualizovat, :class => "btn btn-success" %> <%= link_to "Zrušit", :back, :class => "btn btn-default" %>
  <% end %>
</div>