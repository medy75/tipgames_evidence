<% @page_title = "Provozovny" %>
<div class="Branch">
  <div class="page-header">
    <h1>Provozovny</h1>
  </div>
  <%= link_to "Přidat provozovnu", {:controller => 'branchs', :action => 'new'}, :class => "btn btn-success" %>
  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th>Název</th>
        <th>Adresa</th>
        <th>Město</th>
        <th>Akce</th>
      </tr>
    </thead>
    <% @branches.each do |branch| %>
      <tr>
        <td><%= branch.name %></td>
        <td><%= branch.address %></td>
        <td><%= branch.city %></td>
        <td><%= link_to "Zobrazit", {:action => 'show', :id => branch.id}, :class => 'btn btn-default' %>
            <%= link_to "Upravit", {:action => 'edit', :id => branch.id}, :class => 'btn btn-default' %>
            <%= link_to "Smazat", {:action => 'delete', :id => branch.id}, :class => 'btn btn-danger', data: { confirm: "Opravdu?" } %></td>
      </tr>
    <% end %>
  </table>
</div>